h1 = @question.title
p = @question.body
- if @question.files.attached?
  ul.question-files
    - @question.files.each do |file|
      li data-file-id=file.id
        = link_to file.filename.to_s, url_for(file)
        - if current_user&.author? @question
          br
          = link_to 'Remove file',
            question_remove_file_path(@question, file_id: file.id),
            method: :delete, remote: true

- if current_user&.author? @question
  p
    = link_to 'Edit question', '#', class: 'edit-question-link',
      data: { question_id: @question.id }

  = form_with model: @question, class: 'hidden',
    html: { id: "edit-question-#{@question.id}" } do |f|
    p
      = f.label :title, 'Title question'
      = f.text_field :title
    p
      = f.label :body, 'Question body'
      = f.text_area :body
    p
      = f.label :files
      = f.file_field :files, multiple: true
    p = f.submit 'Save question'
    end
  p = link_to 'Delete', @question, method: :delete
